<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
        >

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_card"
            android:layout_marginTop="10dp" android:shrinkColumns="1" android:stretchColumns="1,3">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PairTitle"
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceholderText"
                    android:id="@+id/TradeHistoryPair"
                    android:layout_column="1"
                    android:textColor="@android:color/primary_text_light"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AmountTitle"
                    android:id="@+id/textView1"
                    android:layout_column="2"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceholderText"
                    android:id="@+id/TradeHistoryAmount"
                    android:layout_column="3"
                    android:textColor="@android:color/primary_text_light"/>

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RateTitle"
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceholderText"
                    android:id="@+id/TradeHistoryRate"
                    android:layout_column="1"
                    android:textColor="@android:color/primary_text_light"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TypeTitle"
                    android:id="@+id/textView8"
                    android:layout_column="2"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceholderText"
                    android:id="@+id/TradeHistoryType"
                    android:layout_column="3"
                    android:textColor="@android:color/primary_text_light"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OrderIDTitle"
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceholderText"
                    android:id="@+id/TradeHistoryOrderID"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textColor="@android:color/primary_text_light"/>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TimeStampTitle"
                    android:id="@+id/textView15"
                    android:layout_column="0"
                    android:textColor="@android:color/primary_text_light"
                    android:textStyle="bold" android:layout_marginRight="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PlaceholderText"
                    android:id="@+id/TradeHistoryTimestamp"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textColor="@android:color/primary_text_light"/>
        </TableRow>

    </TableLayout>

</FrameLayout>