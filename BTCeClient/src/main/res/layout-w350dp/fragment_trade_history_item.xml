<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_card"
    android:shrinkColumns="1"
    android:stretchColumns="1,3">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/PairTitle"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TradeHistoryPair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/PlaceholderText"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/AmountTitle"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TradeHistoryAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="@string/PlaceholderText"
            android:textColor="@android:color/primary_text_light" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/RateTitle"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TradeHistoryRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/PlaceholderText"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/TypeTitle"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TradeHistoryType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="@string/PlaceholderText"
            android:textColor="@android:color/primary_text_light" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/OrderIDTitle"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TradeHistoryOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_span="3"
            android:text="@string/PlaceholderText"
            android:textColor="@android:color/primary_text_light" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/TimeStampTitle"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TradeHistoryTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_span="3"
            android:text="@string/PlaceholderText"
            android:textColor="@android:color/primary_text_light" />
    </TableRow>

</TableLayout>
