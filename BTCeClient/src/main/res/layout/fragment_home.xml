<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:measureWithLargestChild="false"
                android:baselineAligned="false"
                android:showDividers="beginning|none|middle|end"
                android:stretchColumns="*"
                android:id="@+id/tickersContainer"
                android:gravity="center_horizontal" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" android:background="@drawable/bg_dashboard">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:measureWithLargestChild="true">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PairColumnHeader"
                        android:id="@+id/textView12"
                        android:layout_column="0"
                        android:textSize="16sp"
                        android:textStyle="bold" android:textColor="@android:color/secondary_text_dark"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TickerInfoLast"
                        android:id="@+id/TickerInfoLast"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:textSize="16sp" android:textColor="@android:color/secondary_text_dark"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TickerInfoBuy"
                        android:id="@+id/TickerInfoBuy"
                        android:layout_column="2"
                        android:textStyle="bold"
                        android:textSize="16sp" android:textColor="@android:color/secondary_text_dark"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TickerInfoSell"
                        android:id="@+id/TickerInfoSell"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="16sp" android:textColor="@android:color/secondary_text_dark"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/FeeX2"
                        android:id="@+id/TickerInfoFeeX2"
                        android:layout_column="4"
                        android:textStyle="bold"
                        android:textSize="16sp" android:textColor="@android:color/secondary_text_dark"/>
            </TableRow>
        </TableLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/AccountInfo"
                android:id="@+id/AccountInfoTitle"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:stretchColumns="*"
                android:id="@+id/FundsContainer" android:layout_margin="5dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UpdateAccountInfo"
                    android:id="@+id/textView1"
                    android:gravity="center"/>
        </TableLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/UpdateButton"
                android:id="@+id/UpdateAccountInfoButton"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TradeTitle"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"/>

        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:orientation="vertical"
                android:shrinkColumns="*">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Amount"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center" android:textSize="16sp"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Currency"
                        android:id="@+id/textView8"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center" android:textSize="16sp"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/TradeAmount"
                        android:layout_column="0"
                        android:singleLine="true"
                        android:editable="true"
                        android:numeric="integer|decimal"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/TradeCurrency"
                        android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                        android:layout_column="1"
                        android:entries="@array/Currencies"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Price"
                        android:id="@+id/textView9"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center" android:textSize="16sp"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Currency"
                        android:id="@+id/textView10"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center" android:textSize="16sp"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/TradePrice"
                        android:layout_column="0"
                        android:singleLine="true"
                        android:editable="true"
                        android:numeric="integer|decimal"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>

                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/TradePriceCurrency"
                        android:layout_column="1"
                        android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                        android:focusable="false"
                        android:entries="@array/Currencies"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
            </TableRow>

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/BuyButton"
                        android:id="@+id/BuyButton"
                        android:layout_weight="1"
                        android:layout_margin="5dp" android:enabled="true"
                        android:background="@drawable/buy_button_custom"/>

                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SellButton"
                        android:id="@+id/SellButton"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="@drawable/sell_button_custom"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>