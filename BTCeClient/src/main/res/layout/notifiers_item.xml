<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginTop="10dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="false" android:layout_alignParentRight="false"
                android:layout_alignWithParentIfMissing="false" android:layout_toLeftOf="@+id/removeNotifier">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PairTitle"
                        android:id="@+id/textView10"
                        android:textColor="@android:color/primary_text_light"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PlaceholderText"
                        android:id="@+id/NotifiersPair" android:layout_marginLeft="10dp"
                        android:textColor="@android:color/primary_text_light"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/TypeTitle"
                        android:id="@+id/textView6"
                        android:textColor="@android:color/primary_text_light"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NotifiersType" android:layout_marginLeft="10dp"
                        android:text="@string/PlaceholderText"
                        android:textColor="@android:color/primary_text_light"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ValueTitle"
                        android:textColor="@android:color/primary_text_light"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NotifiersValue" android:layout_marginLeft="10dp"
                        android:text="@string/PlaceholderText"
                        android:textColor="@android:color/primary_text_light"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/removeNotifier" android:src="@drawable/remove_button"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                android:contentDescription="@string/RemoveOrder"/>
    </RelativeLayout>
</LinearLayout>